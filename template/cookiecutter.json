{
    "name": "Create GEL Component",
    "templatePath": "gel_component_id",
    "outputPath": "../packages/gel/components",
    "fields": [
        {
            "templateVariable": "COMPONENT_TYPE",
            "question": "Component Type:",
            "choices": [
                "gel"
            ]
        },
        {
            "templateVariable": "COMPONENT_NAME",
            "question": "Component Name (e.g. gel-component):",
            "errorMessage": "Component Name must be in kebab case and can only include letters"
        },
        {
            "templateVariable": "COMPONENT_CLASS_NAME",
            "question": "React Component Name (e.g. GelComponent):"
        },
        {
            "templateVariable": "STORYBOOK_FOLDER",
            "question": "Top Level Storybook Folder:",
            "choices": [
                "GEL"
            ]
        },
        {
            "templateVariable": "IMPORT_FROM",
            "question": "Import from package:",
            "choices": [
                "@bbc/web-gel-components"
            ]
        },
        {
            "templateVariable": "EXPORT_COMPONENT",
            "question": "Please run the commands in the generated post-create-component.txt file",
            "choices": [
                "OK"
            ]
        }
    ]
}
